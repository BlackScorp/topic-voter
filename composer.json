{
  "name": "blackscorp/topicvoter",
  "description": "Tool to vote for Video ideas",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "BlackScorp\\TopicVoter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BlackScorp\\TopicVoter\\Test\\": "tests/"
    }
  },
  "require": {
    "php": "^7.4 ||^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^0.12.88",
    "phpmetrics/phpmetrics": "^2.7",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "code-check": [
      "php composer.phar unit-tests",
      "php composer.phar analyze",
      "php composer.phar check-codestyle",
      "php composer.phar check-metrics"
    ],
    "unit-tests": "php vendor/phpunit/phpunit/phpunit --configuration phpunit.xml",
    "unit-tests-coverage": "php -dxdebug.mode=coverage vendor/phpunit/phpunit/phpunit --coverage-html tmp/coverage --configuration phpunit.xml",
    "analyze": "php vendor/phpstan/phpstan/phpstan analyze -c phpstan.neon",
    "fix-codestyle": "php vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config .php-cs",
    "check-codestyle": "php vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config .php-cs --dry-run",
    "check-metrics": "php vendor/phpmetrics/phpmetrics/bin/phpmetrics --config=phpmetrics.json --junit=tmp/junit.xml"
  }
}

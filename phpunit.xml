<?xml version="1.0"?>
<phpunit bootstrap="vendor/autoload.php"  colors="true"
         stopOnFailure="false"
>
    <testsuites>
        <testsuite name="full">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
            <exclude>
                <directory>vendor</directory>
                <directory>tests/Mock</directory>
                <directory>bin</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>